{
	"template": "recipe-linebot-*",
	"settings": {
		"index": {
			"number_of_replicas": 0,
			"analysis": {
				"analyzer": {
					"kana_text": {
						"tokenizer": "kana_ngram",
						"filter": ["kana_normalization"]
					},
					"kana_keyword": {
						"tokenizer": "kuromoji_tokenizer",
						"filter": ["partofspeech", "kanji_readingform", "kana_normalization"]
					}
				},
				"tokenizer": {
					"kana_ngram": {
						"type": "ngram",
						"token_chars": ["letter"]
					}
				},
				"filter": {
					"partofspeech": {
						"type": "kuromoji_part_of_speech",
						"stoptags": ["接頭詞", "動詞", "形容詞", "副詞", "連体詞", "接続詞", "助詞", "助動詞", "感動詞", "記号", "その他", "フィラー", "非言語音", "語断片"]
					},
					"kanji_readingform": {
						"type": "kuromoji_readingform",
						"use_romaji": false
					},
					"kana_normalization": {
						"type": "icu_transform",
						"id": "Halfwidth-Fullwidth; Katakana-Hiragana;"
					}
				}
			}
		}
	},
	"mappings": {
		"recipe": {
			"_all": {"enabled": false},
			"properties": {
				"materials": {
					"type": "text", "analyzer": "kana_text",
					"fields" : {
						"keyword" : {"type": "text", "analyzer": "kana_keyword"}
					}
				},
				"title": {
					"type": "text", "analyzer": "kana_text"
					"fields": {
						"keyword": {"type": "text", "analyzer": "kana_keyword"}
					}
				},
				"description": {
					"type": "text", "analyzer": "kana_text"
					"fields": {
						"keyword": {"type": "text", "analyzer": "kana_keyword"}
					}
				},
				"image_url": {"type": "keyword", "index": false},
				"detail_url": {"type": "keyword", "index": false}
			}
		},
		"ranking": {
			"_all": {"enabled": false},
			"properties": {
				"concept": {
					"type": "text", "analyzer": "kana_text"
					"fields": {
						"keyword": {"type": "text", "analyzer": "kana_keyword"}
					}
				},
				"recipes": {"type": "long", "index": false, "doc_values": false}
			}
		}
	}
}
